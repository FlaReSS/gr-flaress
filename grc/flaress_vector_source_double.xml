<?xml version="1.0"?>
<block>
  <name>Vector Source Double</name>
  <key>flaress_vector_source_double</key>
  <category>[flaress]</category>
  <import>import flaress</import>
  <make>flaress.vector_source_double($vector, $repeat, $vlen, $tags)</make>

	<param>
		<name>Vector</name>
		<key>vector</key>
		<value>(0, 0, 0)</value>
		<type>raw</type>
	</param>
	<param>
		<name>Tags</name>
		<key>tags</key>
		<value>[]</value>
		<type>raw</type>
	</param>
	<param>
		<name>Repeat</name>
		<key>repeat</key>
		<value>True</value>
		<type>enum</type>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
	</param>
	<param>
		<name>Vec Length</name>
		<key>vlen</key>
		<value>1</value>
		<type>int</type>
	</param>
	<check>$vlen &gt; 0</check>
	<source>
		<name>out</name>
		<type>f64</type>
		<vlen>$vlen</vlen>
	</source>
</block>

